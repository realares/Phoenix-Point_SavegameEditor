<UserControl x:Class="PWRA_GUI.Base"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PWRA_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="SiteType: "></TextBlock>
            <TextBox Text="{Binding Data.SiteType}" MinWidth="100"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="SiteType: "></TextBlock>
            <TextBox Text="{Binding Data.State}" MinWidth="100"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="SiteType: "></TextBlock>
            <TextBox Text="{Binding Data.State}" MinWidth="100"></TextBox>
        </StackPanel>
    </StackPanel>
</UserControl>
