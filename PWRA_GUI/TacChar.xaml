<UserControl x:Class="PWRA_GUI.TacChar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PWRA_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="border" BorderBrush="Black" BorderThickness="1" Margin="5">
        <StackPanel Margin="5">
        <StackPanel x:Name="basestack">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name" Width="150" />
                <TextBlock Text="Max" Width="60" />
                <TextBlock Text="Value" Width="60" />
            </StackPanel>
            </StackPanel >
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Button Content="Set all to max" Click="btnAllToMax_Click" Width="150" Margin="10" />
            <Button Content="Armor to 200" Click="btnAmorToMax_Click" Width="150" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
